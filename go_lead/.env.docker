# Docker Environment Configuration
# This file contains default values for Docker Compose
# Override these in docker-compose.yml or create a .env file

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lead_gateway
DB_SSLMODE=disable

# API Server Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Worker Configuration
WORKER_POLL_INTERVAL=5s
WORKER_CONCURRENCY=5

# Queue Configuration
QUEUE_TYPE=redis
REDIS_URL=redis://redis:6379/0

# Customer API Configuration
CUSTOMER_API_URL=https://contactapi.static.fyi/lead/receive/fake/USER_ID/
CUSTOMER_API_TOKEN=FakeCustomerToken
CUSTOMER_API_TIMEOUT=30s
CUSTOMER_PRODUCT_NAME=Solaranlage

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
RETRY_BACKOFF_BASE=30s

# Authentication (Optional)
ENABLE_AUTH=false
SHARED_SECRET=your_shared_secret_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Attribute Mapping Configuration
ATTRIBUTE_MAPPING_FILE=./config/customer_attribute_mapping.json
